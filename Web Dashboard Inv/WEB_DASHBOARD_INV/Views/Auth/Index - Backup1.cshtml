
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="card-body">
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
        <label class="form-label">User ID</label>
        <div id="input-group-userid" class="input-group input-group-outline">

            <input type="text" class="form-control" id="user_id" name="user_id" required>
        </div>

        <label class="form-label">Password</label>
        <div id="input-group-password" class="input-group input-group-outline">

            <input type="password" class="form-control" id="password" name="password" required>
            @*<div class="input-group-text me-2">
                <span toggle="#password-field" id="toggle_pwd" class="fa fa-eye-slash " onclick="myshowp()"></span>
            </div>*@
        </div>
        <div class="text-center">
            <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Login</button>
        </div>
    }
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script>
    document.getElementById('user_id').value = "";
    document.getElementById('password').value = "";
    var messageCreate = '@ViewData["ErrorLogin"]';
    if (messageCreate != '') {
        swal("info login", messageCreate, "error");
    };

    function myshowp() {
        txtBox = document.getElementById('password');
