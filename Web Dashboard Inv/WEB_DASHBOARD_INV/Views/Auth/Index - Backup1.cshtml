            //console.log('masuk bukan password');
        }
    };

    function onChangeInputroupUserId() {
        document.getElementsByClassName('input-group-userid').value = "input-group input-group-outline my-3";
        console.log("onChangeInputroupUserId");
    }

    function onChangeInputroupPassword() {
        document.getElementsByClassName('input-group-password').value = "input-group input-group-outline my-3";
        console.log("onChangeInputroupPassword");
    }

</script>  