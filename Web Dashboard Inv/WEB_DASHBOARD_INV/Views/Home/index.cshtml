    <!-- Begin page content -->
    <main role="main" class="containers gy-4" style="padding: 20px;">
        <div class="row" style="margin-top: 60px;">
            <div class="col-10">
                <div class="card h-100">
                    <h5 class="card-header"><span id="WarehouseName"></span> TASK LIST</h5>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-flush" id="TableCuttingList" style="font-size: 16px; width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:150px;">WORK ORDER</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:250px;">MATERIAL</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:20px;">DIMENTION</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:20px;">M3</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:20px;">QTY</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:20px;">DONE</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:20px;">OUTSTANDING</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:20px;">STATUS</th>
                                        <th class="text-uppercase text-center text-sm font-weight-bolder opacity-7" style="width:200px;">NOTE</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        int no = 1;
                                        int total_work_oder = 0;
                                        int qty_outstanding = 0;
                                        int total_outstanding = 0;
                                        int total_success = 0;
                                        //string operation_id = "";
                                    }

                                    @foreach (var item in Model)
                                    {

                                        string status = "";
                                        if (item.qty_requested != null && item.qty_done != null)
                                        {
                                            if (item.qty_requested > item.qty_done && item.qty_done > 0)
                                            {
                                                status = "ON PROGRESS";
                                            }
                                            else if (item.qty_requested > item.qty_done && item.qty_done == 0)
                                            {
                                                status = "PENDING";
                                            }
                                            else
                                            {
                                                status = "DONE";
                                            }
                                        }

                                        //if (item.operation_id != operation_id)
                                        //{
                                        //    total_work_oder = total_work_oder + 1;
                                        //    operation_id = item.operation_id;
                                        //}

                                        if (item.qty_requested > item.qty_done)
                                        {
                                            qty_outstanding = (int)item.qty_requested - (int)item.qty_done;
                                            total_outstanding = total_outstanding + qty_outstanding;
                                        }

                                        total_success = total_success + item.qty_done;

                                        <tr>
                                           
                                            <td>
                                                <p class="text-left font-weight-normal mb-0">@item.operation_id</p>
                                            </td>
                                            <td>
                                                <p class="text-left font-weight-normal mb-0">@item.product_name</p>
                                            </td>
                                            <td>
                                                <p class="text-left font-weight-normal mb-0">@item.dimention</p>
                                            </td>
                                            <td>
                                                <p class="text-right font-weight-normal mb-0">@item.m3_requested</p>
                                            </td>
                                            <td>
                                                <p class="text-right font-weight-normal mb-0">@item.qty_requested</p>
                                            </td>
                                            <td>
                                                <p class="text-right font-weight-normal mb-0">@item.qty_done</p>
                                            </td>
                                            <td>
                                                <p class="text-right font-weight-normal mb-0">@qty_outstanding</p>
                                            </td>
                                            <td>
                                                <p class="text-left font-weight-normal mb-0">@status</p>
                                            </td>
                                            <td>
                                                <p class="text-left font-weight-normal mb-0">@item.note</p>
                                            </td>
                                        </tr>

                                        no++;
                                        total_work_oder = total_work_oder + 1;

                                    }

                                    @{
                                        TempData["TotalWorkOrder"] = total_work_oder.ToString();
                                        TempData["TotalOutstanding"] = total_outstanding.ToString();
                                        TempData["TotalSuccess"] = total_success.ToString();
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <div class="dataTables_info mx-4 text-xs font-weight-bolder" aria-live="polite">Showing @ViewBag.Pagination.currentPage to @ViewBag.Pagination.pageSize of @ViewBag.Pagination.totalCount entries</div>
                        </div>
                        <div class="col-7 float-end">
                            <nav>
                                <div class="navigation mx-2 text-xs float-end">
                                    @if (ViewBag.Pagination.endPage > 1)
                                    {
                                        <ul class="pagination">
                                            @if (ViewBag.Pagination.currentPage > 1)
                                            {
                                                <li class="page-item @ViewBag.Pagination.previousPage.Class"><a class="page-link" href="?fDateWorkOrder=@ViewData["F1"]&pNumber=@ViewBag.Pagination.previousPage.Page&pSize=@ViewData["pSize"]">&laquo;</a></li>
                                            }

                                            @for (var page = ViewBag.Pagination.startPage; page <= ViewBag.Pagination.endPage; page++)
                                            {
                                                <li class="page-item @(page == ViewBag.Pagination.currentPage ? "active" : "")"><a class="page-link" href="?fDateWorkOrder=@ViewData["F1"]&pNumber=@page&pSize=@ViewData["pSize"]">@page</a></li>
                                            }

                                            @if (ViewBag.Pagination.currentPage < ViewBag.Pagination.totalPages)
                                            {
                                                <li class="page-item @ViewBag.Pagination.nextPage.Class"><a class="page-link" href="?fDateWorkOrder=@ViewData["F1"]&pNumber=@ViewBag.Pagination.nextPage.Page&pSize=@ViewData["pSize"]">&raquo;</a></li>

                                            }
                                        </ul>

                                    }
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2">
                <div class="card h-100">
                    <h5 class="card-header">STATUS</h5>
                    <div class="card-body">
                        <div class="card text-center text-primary">
                            <h5 class="card-header">TOTAL WORK ORDER</h5>
                            <div class="card-body">
                                <h5 class="card-title"><span id="TotalWorkOrder">0</span></h5>
                            </div>
                        </div>
                        <div class="card text-center text-danger mt-4">
                            <h5 class="card-header">OUTSTANDING</h5>
                            <div class="card-body">
